<?xml version="1.0" encoding="utf-8"?>
<com.ll.common.app.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cell_galley_img_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name" />

    <View
        android:id="@+id/cell_galley_view_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_112"
        android:visibility="gone"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/cell_galley_checkbox_select"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="@dimen/len_2"
        android:button="@drawable/sel_cb_circle"
        android:clickable="false"
        android:drawablePadding="0dp"
        android:enabled="false"
        android:gravity="end"
        android:padding="0dp"
        android:visibility="gone"
        tools:visibility="visible" />

</com.ll.common.app.widget.SquareLayout>